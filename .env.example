# Briefly Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================

# PostgreSQL connection string
# For Docker: postgres://briefly:briefly_dev_password@localhost:5432/briefly?sslmode=disable
# For production: postgres://user:password@host:5432/briefly?sslmode=disable
DATABASE_URL=postgres://briefly:briefly_dev_password@localhost:5432/briefly?sslmode=disable

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=briefly
POSTGRES_PASSWORD=briefly_dev_password
POSTGRES_DB=briefly

# ============================================
# AI/LLM Configuration
# ============================================

# Google Gemini API Key (required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key (optional, for future banner generation)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Cache Configuration
# ============================================

# Cache directory for SQLite
CACHE_DIR=.briefly-cache

# Cache TTL in hours
CACHE_TTL_HOURS=168

# ============================================
# Application Configuration
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Debug mode
DEBUG=false

# Output directory for digests
OUTPUT_DIR=digests

# ============================================
# Optional: pgAdmin Configuration
# ============================================

# pgAdmin default credentials
PGADMIN_DEFAULT_EMAIL=admin@briefly.local
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================
# Observability Configuration (Phase 0)
# ============================================

# LangFuse - LLM Observability (optional)
# Sign up at: https://langfuse.com
# For self-hosted, change the host URL
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# PostHog - Product Analytics (optional)
# Sign up at: https://posthog.com
# For self-hosted, change the host URL
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# ============================================
# Optional: Redis Configuration (future)
# ============================================

# Redis URL
# REDIS_URL=redis://localhost:6379/0
